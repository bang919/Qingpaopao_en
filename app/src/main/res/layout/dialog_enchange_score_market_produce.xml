<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/buy_information"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/n_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_buy_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/buy_count"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/btn_add"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_count_btn_right_radius"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_buy_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_buy_count" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_count_btn_middle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_buy_count"
        app:layout_constraintRight_toLeftOf="@id/btn_add"
        app:layout_constraintTop_toTopOf="@id/tv_buy_count" />

    <TextView
        android:id="@+id/btn_minus"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_count_btn_left_radius"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_buy_count"
        app:layout_constraintRight_toLeftOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="@id/tv_buy_count" />

    <TextView
        android:id="@+id/tv_own_score_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/own_score"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_buy_count"
        app:layout_constraintTop_toBottomOf="@id/tv_buy_count" />

    <TextView
        android:id="@+id/tv_own_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_own_score_key"
        app:layout_constraintRight_toRightOf="@id/btn_add" />

    <TextView
        android:id="@+id/tv_receiver_address_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/receiver_address"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_own_score_key"
        app:layout_constraintTop_toBottomOf="@id/tv_own_score_key" />

    <TextView
        android:id="@+id/tv_receiver_address_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="right|center_vertical"
        android:maxLines="3"
        android:paddingRight="40dp"
        android:text="@string/choose_address"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_receiver_address_key"
        app:layout_constraintLeft_toRightOf="@id/tv_receiver_address_key"
        app:layout_constraintRight_toRightOf="@id/tv_own_score_value"
        app:layout_constraintTop_toTopOf="@id/tv_receiver_address_key" />

    <ImageView
        android:id="@+id/next_item_rv_mine_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@mipmap/n_arrow"
        app:layout_constraintBottom_toBottomOf="@id/tv_receiver_address_value"
        app:layout_constraintRight_toRightOf="@id/tv_receiver_address_value"
        app:layout_constraintTop_toTopOf="@id/tv_receiver_address_value" />

    <TextView
        android:id="@+id/tv_need_pay_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/need_pay"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_own_score_key"
        app:layout_constraintTop_toBottomOf="@id/tv_receiver_address_key" />

    <TextView
        android:id="@+id/tv_need_pay_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorRed"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_need_pay_key"
        app:layout_constraintLeft_toRightOf="@id/tv_need_pay_key" />

    <Button
        android:id="@+id/btn_change_at_once"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorRed"
        android:text="@string/change_at_once"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_need_pay_key" />

</android.support.constraint.ConstraintLayout>